{
  "manifest_version": 3,
  "name": "boost-bilibili",
  "version": "0",
  "description": "Boost bilibili.com",
  "icons": {
    "128": "128.png"
  },
  "omnibox": {
    "keyword": "bi"
  },
  "permissions": [
    "contextMenus",
    "declarativeNetRequest"
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "0",
      "path": "0.json",
      "enabled": true
    }]
  },
  "background": {
    "service_worker": "bg.js"
  },
  "content_scripts":[{
    "css": ["main.css"],
    "js": ["main.js"],
    "matches": ["https://*.bilibili.com/*"],
    "world": "MAIN",
    "run_at": "document_start"
  }],
  "action": {
    "default_popup": "popup.htm"
  }
}